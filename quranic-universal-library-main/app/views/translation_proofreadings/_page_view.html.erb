<%
  translations = Translation.where(
    resource_content_id: @resource.id,
    page_number: verse.page_number
  ).order('verse_id ASC')
%>

<div class="page-wrapper container-lg">
  <div class="d-flex justify-content-center">
    <div>
      <% translations.each do |ayah_translation| %>
        <div class="p-2">
          <%= safe_html ayah_translation.text %>
          <span class="border bg-primary">
            <%= ayah_translation.verse_key %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>